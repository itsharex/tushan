{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["./demo/*", "./src/*"]
}
